{%- render 'list-collections' -%}

{% schema %}
  {
    "name": "Collection marbles",
    "class": "collection-marbles",
    "max_blocks": 12,
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "default": "carousel",
        "options": [
          { "value": "grid", "label": "Grid" },
          { "value": "carousel", "label": "Carousel" }
        ]
      },
      {
        "type": "range",
        "id": "columns",
        "label": "Collections per row",
        "default": 6,
        "min": 3,
        "max": 8,
        "step": 1
      },
      {
        "type": "range",
        "id": "image_size",
        "label": "Image size",
        "default": 90,
        "min": 60,
        "max": 100,
        "step": 5,
        "unit": "%"
      },
      {
        "type": "select",
        "id": "image_shape",
        "label": "Image Shape",
        "default": "rect",
        "options": [
          { "label": "Circles", "value": "circle" },
          { "label": "Squares", "value": "square" },
          { "label": "Rectangles", "value": "rect" }
        ]
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "range",
        "id": "text_size",
        "label": "Text size",
        "default": 100,
        "min": 75,
        "max": 150,
        "step": 5,
        "unit": "%"
      },
      {
        "type": "checkbox",
        "id": "overlay_text",
        "label": "Overlay text",
        "default": false,
        "info": "Text over images"
      },
      {
        "type": "select",
        "id": "text_color",
        "label": "Text color",
        "default": "text-dark",
        "options": [
          { "value": "text-light", "label": "Light" },
          { "value": "text-dark", "label": "Dark" }
        ]
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Text contrast",
        "info": "Improves readability of text",
        "min": 0,
        "max": 95,
        "step": 5,
        "unit": "%",
        "default": 0
      },
      {
        "type": "header",
        "content": "Mobile layout"
      },
      {
        "type": "checkbox",
        "id": "enable_slider_mobile",
        "label": "Enable slider",
        "default": true,
        "info": "Horizontal slider in mobile layout."
      },
      {
        "type": "select",
        "id": "columns_mobile",
        "label": "Collections per row",
        "default": "2",
        "options": [
          { "label": "1", "value": "1" },
          { "label": "2", "value": "2" }
        ]
      },
      {
        "type": "header",
        "content": "Section spacing"
      },
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "wrapper",
        "options": [
          { "value": "wrapper--full-padded", "label": "Full width padded" },
          { "value": "wrapper", "label": "Page width" }
        ]
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 60
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 60
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "label": "Collection",
            "id": "collection",
            "type": "collection"
          },
          {
            "type": "image_picker",
            "id": "custom_collection_image",
            "label": "Image"
          },
          {
            "type": "header",
            "content": "Colors"
          },
          {
            "type": "checkbox",
            "id": "show_color",
            "label": "Show color",
            "default": false,
            "info": "Overrides the collection image."
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#f7f7f7"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection marbles",
        "category": "Collection",
        "blocks": [
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}
